---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import Header from "@/components/Header.astro";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      {
        (() => {
          const supabaseUrl = import.meta.env.SUPABASE_URL ?? "";
          return `window.__SUPABASE_URL = ${JSON.stringify(supabaseUrl)};`;
        })();
      }
    </script>
  </head>
  <body class="flex min-h-screen w-full flex-col">
    <Header />
    <main class="container mx-auto flex-1 p-4 pt-8">
      <slot />
    </main>
    <Toaster />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
