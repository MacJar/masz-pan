---
import Layout from "@/layouts/Layout.astro";
import ToolsSearchApp from "@/components/tools/ToolsSearchApp";

const { q } = Astro.params;
---

<Layout title="Masz Pan Narzędzie">
  <main class="container mx-auto px-4 py-8">
    <div class="mx-auto max-w-4xl">
      <h1 class="mb-4 text-center text-4xl font-bold">Sąsiedzka wypożyczalnia narzędzi</h1>
      <br />
      <ToolsSearchApp client:load initialQuery={q} />
    </div>
  </main>
</Layout>
