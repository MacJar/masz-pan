---
import Layout from "../layouts/Layout.astro";
import ToolsSearchApp from "../components/tools/ToolsSearchApp.tsx";

const initialQuery = Astro.url.searchParams.get("q") ?? undefined;
---

<Layout title="Wyszukiwanie narzędzi">
  <main class="mx-auto max-w-3xl px-4 py-8">
    <h1 class="mb-6 text-2xl font-semibold">Wyszukiwanie narzędzi</h1>
    <ToolsSearchApp client:visible initialQuery={initialQuery} />
  </main>
</Layout>
